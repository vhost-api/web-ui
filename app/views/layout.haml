!!!
%html{ lang: 'en' }
  %head
    %meta{ charset: 'utf-8' }
    %meta{ content: 'IE=edge', 'http-equiv' => 'X-UA-Compatible' }
    %meta{ content: 'width=device-width, initial-scale=1', name: 'viewport' }
    %meta{ content: '', name: 'description' }
    %meta{ content: '', name: 'author' }
    %title= @title
    %link{ href: "/#{settings.cssdir}/bootstrap.min.css", rel: 'stylesheet' }
    %link{ href: "/#{settings.cssdir}/own.css", rel: 'stylesheet' }
    %link{ href: "/#{settings.cssdir}/icon.css", rel: 'stylesheet' }

    %link{ href: '/img/favicon.ico', rel: 'shortcut icon' }
  %body
    %nav.navbar.navbar-inverse.navbar-fixed-top
      .container-fluid
        .navbar-header
          %button.navbar-toggle.collapsed{ 'aria-controls' => 'navbar',
                                           'aria-expanded' => 'false',
                                           'data-target' => '#navbar',
                                           'data-toggle' => 'collapse',
                                           :type => 'button' }
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand.navbar-brand-pad{ href: '#' } VHost-Api
        .navbar-collapse.collapse#navbar
          %ul.nav.navbar-nav
            = haml :nav
          %ul.nav.navbar-nav.navbar-right
            - if !@user.nil?
              %li.dropdown

                %a.dropdown-toggle{ 'aria-expanded': 'false',
                                    'aria-haspopup': 'true',
                                    'data-toggle': 'dropdown',
                                    href: '#',
                                    role: 'button' }
                  = @user[:login]
                  %span.caret
                %ul.dropdown-menu
                  %li
                    %a{ href: '/logout' }
                      .icon.icon-logout<
                        Logout
            - else
              %li
                %a{ href: '/login',
                    title: 'Login' }
                  Login
    .container-fluid
      .row
      - if !@sidebar_elements.nil?
        .col-sm-3.col-md-1.sidebar
          %ul.nav.nav-sidebar
            = haml :sidebar
        .col-sm-9.col-sm-offset-3.col-md-11.col-md-offset-1.main
          = yield
        .row
          .col-sm-9.col-sm-offset-3.col-md-11.col-md-offset-1.main
            = find_and_preserve styled_flash
      - else
        .col-sm-12.col-md-12.col-md-offset-2.main
          = yield
        .row
          .col-sm-12.col-md-12.col-md-offset-2.main
            = find_and_preserve styled_flash
    -# %script{ src: '/js/bootstrap.min.js' }
